<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAEBD7"
    android:padding="16dp">

    <!-- 상단 제목 -->
    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JoyfulMind"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="16dp" />

    <!-- 프로필 이미지 공간 -->
    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_launcher_foreground" />

    <!-- 사용자 이름 입력 필드 -->
    <EditText
        android:id="@+id/username_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edit_text_background"
        android:gravity="center"
        android:hint="가민서"
        android:padding="8dp" />

    <!-- 조이와 대화하러 가기 버튼 -->

    <!-- 일기 작성하기 버튼 -->
    <Button
        android:id="@+id/chat_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_background"
        android:drawableLeft="@android:drawable/ic_menu_save"
        android:foregroundTint="#FFFFFF"
        android:padding="16dp"
        android:text="조이와 대화하러 가기"
        android:textSize="20sp"
        app:iconTint="#FFFFFF" />

    <Button
        android:id="@+id/diary_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="일기 작성하기"
        android:layout_marginBottom="16dp"
        android:drawableLeft="@drawable/ic_diary_icon"
        android:padding="16dp"
        android:background="@drawable/button_background" />

    <!-- 감정 분석하기 버튼 -->
    <Button
        android:id="@+id/analysis_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="감정 분석하기"
        android:drawableLeft="@drawable/ic_analysis_icon"
        android:padding="16dp"
        android:background="@drawable/button_background" />

</LinearLayout>
